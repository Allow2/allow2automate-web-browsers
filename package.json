{
  "name": "@allow2/allow2automate-web-browsers",
  "shortName": "web-browsers",
  "version": "1.0.0",
  "description": "Monitor browser usage and enforce internet time quotas with optional per-site tracking",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "scripts": {
    "test": "jest",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Allow2/allow2automate-web-browsers"
  },
  "bugs": {
    "url": "https://github.com/Allow2/allow2automate-web-browsers/issues"
  },
  "homepage": "https://github.com/Allow2/allow2automate-web-browsers#readme",
  "keywords": [
    "allow2automate",
    "allow2",
    "browser",
    "internet",
    "parental-control",
    "screen-time",
    "web-browsers",
    "chrome",
    "firefox",
    "safari",
    "edge"
  ],
  "author": {
    "name": "Allow2",
    "url": "https://allow2.com"
  },
  "license": "Apache-2.0",
  "allow2automate": {
    "plugin": true,
    "pluginId": "allow2automate-web-browsers",
    "displayName": "Web Browsers",
    "category": "Internet",
    "description": "Monitor and control browser usage with internet time quotas",
    "icon": "web",
    "permissions": [
      "configuration",
      "processMonitor",
      "notifications",
      "quotaManagement"
    ],
    "minAppVersion": "2.0.0",
    "features": {
      "basicMode": {
        "description": "Process-level browser detection and total internet time tracking",
        "alwaysAvailable": true
      },
      "enhancedMode": {
        "description": "Per-site tracking, category classification, and real-time blocking",
        "requiresExtension": true
      }
    },
    "supportedBrowsers": [
      "chrome",
      "firefox",
      "safari",
      "edge",
      "brave",
      "opera",
      "vivaldi"
    ],
    "api": {
      "actions": [
        {
          "id": "configure",
          "name": "Configure Browser Monitoring",
          "description": "Configure browser monitoring settings and quotas"
        },
        {
          "id": "blockBrowsers",
          "name": "Block Browsers",
          "description": "Block all browser access"
        },
        {
          "id": "blockCategory",
          "name": "Block Category",
          "description": "Block websites in a specific category"
        }
      ],
      "triggers": [
        {
          "id": "browserStarted",
          "name": "Browser Started",
          "description": "Triggered when a browser is launched"
        },
        {
          "id": "browserStopped",
          "name": "Browser Stopped",
          "description": "Triggered when a browser is closed"
        },
        {
          "id": "quotaWarning",
          "name": "Quota Warning",
          "description": "Triggered when approaching quota limit"
        },
        {
          "id": "quotaExhausted",
          "name": "Quota Exhausted",
          "description": "Triggered when quota is exhausted"
        }
      ]
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.13.9"
  },
  "peerDependencies": {
    "react": "^16.0.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.0.0 || ^17.0.0 || ^18.0.0",
    "@material-ui/core": "^4.0.0"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/plugin-external-helpers": "^7.12.13",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-do-expressions": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-bind": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.0.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.13.9",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-react": "^7.12.13",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "jest": "^29.0.0",
    "rollup": "^2.40.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.0"
  }
}
